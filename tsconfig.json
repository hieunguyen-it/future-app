{
  "compilerOptions": {
    "target": "ES2022",
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@app": ["src/app"],
      "@app/*": ["src/app/*"],
      "@assets/*": ["src/assets/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@context": ["src/context"],
      "@context/*": ["src/context/*"],
      "@helpers": ["src/helpers"],
      "@helpers/*": ["src/helpers/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@language": ["src/language"],
      "@language/*": ["src/language/*"],
      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],
      "@schema": ["src/schema"],
      "@schema/*": ["src/schema/*"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
      "@styles/*": ["src/styles/*"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "~/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "types": ["vite/client"],
    "verbatimModuleSyntax": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", ".storybook/*.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
